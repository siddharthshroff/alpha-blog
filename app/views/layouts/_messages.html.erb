
<% flash.each do |name, msg| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class='alert alert-<%= "#{name}" %>' role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <ul>
          <li><%= msg %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>