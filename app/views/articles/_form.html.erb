<% if @article.errors.any? %>
  <h2>Errors</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>  
    </ul>
  <% end %>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, html: {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
        </div> 
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Body of Article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-default btn-primary" %>
        </div>
      </div>
    <% end %>    
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to all articles", articles_path %> ]
    </div>
  </div>
</div>

