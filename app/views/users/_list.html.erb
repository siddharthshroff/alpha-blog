<% if obj.class.name == "Article" %>
  <% user = obj.user %>
<% else %>
  <% user = obj %>
  <% well = 1 %>
<% end %>

<ul class="listing center">
  <div class="row">
    <div class='<% if well %> well <% end %> col-md-4 col-md-offset-4'>
      <li><small>Created By:</small></li>
      <li><%= link_to gravatar_for(user), user_path(user) %></li>
      <li class="article-title">
        <%= link_to user.username, user_path(user) %>
      </li>
      <li>
        <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
      </li>
      <% if logged_in? && current_user.admin? %>
        <li><%= link_to "Delete this user", user_path(user), method: :delete, 
        data: {confirm: "Are you sure you want to delete the user and all their articles"} %></li>
      <% end %>
    </div>
  </div>
</ul>